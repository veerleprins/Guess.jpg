<main class="room">
  <section>
    <header>
      <h1>Guess the JPG!</h1>
      <p>Game ID: <span class="roomID"><%= roomID %></span></p>
    </header>
    <div class="output">
      <div>
        <p>Your username: <span class="userName"><%= userName %></span></p>
        <p>Your score: <span class="score">0</span></p>
      </div>
    </div>
    <div class="button-container">
      <button class="start">Start game!</button>
    </div>
  </section>
  <section>
    <header>
      <h2>Group Chat</h2>
      <p>Players: <span class="players">0</span></p>
    </header>
    <ul id="messages"></ul>
    <form id="form" action="">
      <input type="hidden" id="userName" name="<%= userName%>" />
      <input
        type="text"
        id="input"
        autocomplete="off"
        placeholder="Write your message..."
      />
      <button id="sendText">Send</button>
    </form>
  </section>
</main>

<script src="/js/main.js"></script>
